{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

	<section id="features" class="fdb-block mb-5">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-12 col-md-6 col-lg-5">

					<h5>Records</h5>

					{% if records|length > 0 %}
						<table class="table">
							<thead>
								<tr>
								<th scope="col">#</th>
								<th scope="col">Name</th>
								<th scope="col">Record</th>
								<th scope="col">Download</th>
								</tr>
							</thead>
							<tbody>
								{% for record in records %}
									<tr>
										<th scope="row">record.id</th>
										<td>record.name</td>
										<td>record.record</td>
										<td><a href="#" class="badge badge-primary">Download</a></td>
									</tr>					
								{% endfor %}
							</tbody>
						</table>
					{% else %}
						<p>Sorry dude, but you don't any record yet</p>
					{% endif %}
					
				</div>
				<div class="col-12 col-md-6 ml-md-auto">
					<form>
						<div class="form-group">
							<textarea class="form-control" id="result" rows="10" placeholder="I'm waiting your voice..."></textarea>
						</div>
						<button class="btn btn-outline-dark form-control">New Record</button>
					</form>
				</div>
			</div>
		</div>
	</section>

	<section class="fdb-block"></section>

{% endblock %}
