{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}

	<section class="fdb-block">
		<div class="container">
        
            {% if error %}
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            {% endif %}
        
        	<div class="row justify-content-center">
                <form action="{{ path('app_login') }}" method="post">

                    <div class="form-group">
                        <label for="username">Email address</label>
                        <input name="_username" value="{{ last_username }}" type="email" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" name="_password">
                    </div>

                    <input type="hidden" name="app_home" value="/home"/> 
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button type="submit" class="btn btn-primary col-12">Login</button>
                </form>
			</div>

		</div>
	</section>

	<section class="fdb-block">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col col-md-8 text-center">
					<h1>When you speech we write for you, after that, get all your voice in a PDF!</h1>
					<p class="lead">lorem ipsum dolor sit amet...</p>
				</div>
			</div>
		</div>
	</section>

	<div class="col col-md-12 text-center">
		<h1>How to use?</h1>
	</div>

	<section id="features" class="fdb-block">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-12 col-md-6 col-lg-5">
					<p class="lead">> Say what you like</p>
					<p class="lead">> We write for you</p>
                    <p class="lead">> Download the doc</p>
				</div>
				<div class="col-12 col-md-6 ml-md-auto">
                    <img src="{{ absolute_url(asset('assets/images/old-man.jpg')) }}" alt="Old Man Image"/>
				</div>
			</div>
		</div>
	</section>

	<section class="fdb-block fdb-viewport">
		<div class="container justify-content-center align-items-center d-flex">
			<div class="row justify-content-center text-center">
				<div class="col-12 col-md-8">
					<img alt="image" class="fdb-icon" src="{{ absolute_url(asset('assets/images/logo.jpg')) }}">
					<h1>Take a test drive</h1>
					<p>We only need access to your microphone!</p>
                    <button class="btn btn-lg btn-outline-primary">Start my test</button>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
